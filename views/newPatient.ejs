<body>

    <main class="form-signin w-100 m-auto">
        <form style="padding-left: 38%; padding-right: 38%; padding-top: 5%;" method="post" action="/patient/newPatient">
          <img class="mb-4" src="./sign-up.png" alt="" width="72" height="57">
          <h1 class="h3 mb-3 fw-normal">Enter new patient details</h1>
      
          <div class="form-floating my-3">
            <input type="name" class="form-control" id="floatingInput" name="fullName" placeholder="Name">
            <label for="floatingInput">Name</label>
          </div>
      
          <div class="form-floating my-3">
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
            <label for="floatingInput">Email address</label>
          </div>
          <label class="error email"></label>
      
          <div class="form-floating my-3">
            <input type="date" class="form-control" id="floatingInput" name="dateOfBirth" placeholder="dd/mm/yyyy">
            <label for="floatingInput">Date-Of-Birth</label>
          </div>
      
          <div class="form-floating my-3">
            <select class="form-select" id="floatingGender" name="gender" >
              <option selected>Select Gender</option>
              <option value="male">Male</option>
              <option value="female">Female</option>
              <option value="other">Other</option>
            </select>
            <label for="floatingGender">Gender</label>
          </div>
           
          <!-- New text boxes for old symptoms and diseases, and phone number -->
          <div class="form-floating my-3">
            <textarea class="form-control" id="old-symptoms" placeholder="Old symptoms and diseases" style="height: 100px;" name="deseases"></textarea>
            <label for="old-symptoms">Old symptoms and diseases</label>
          </div>
      
          <div class="form-floating my-3">
            <input type="tel" class="form-control" id="phone-number" placeholder="Phone number" name="contact_no">
            <label for="phone-number">Phone number</label>
          </div>
      
          <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">Remember me</label>
          </div>
      
            <!-- Green sign in button -->
            <button class="btn btn-primary w-100 py-2" type="submit">Sign up</button>

            <!-- Blue back button -->
            <button class="btn btn-warning w-100 mt-3 my-5" onclick="window.history.back()">Back</button>
        </form>
      </main>
      
    
